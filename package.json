{
  "name": "red-redux-class",
  "version": "1.0.8",
  "description": "Use objects and composition for creating complex reducers which can be easily maintained.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "lint": "tslint 'src/**/*.ts",
    "test": "jest ./src/",
    "test:watch": "npm run test -- --watch",
    "jest": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/redeeps/red-redux-class.git"
  },
  "keywords": [
    "Redux",
    "Class",
    "Object",
    "OOP",
    "Composition",
    "Immutable"
  ],
  "author": "Jacek Raczykowski",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/prop-types": "^15.7.0",
    "@types/redux": "^3.6.0",
    "cross-env": "2.0.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "redux": "^4.0.1"
  },
  "prettier": {
    "useTabs": false,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "jest": {
    "testRegex": ".*\\.spec\\.ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
